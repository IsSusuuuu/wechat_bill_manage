<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.susu.mapper.CategoryRuleMapper">
    
    <!-- 分页查询规则 -->
    <select id="pageQuery" resultType="com.susu.domain.entity.CategoryRule">
        SELECT * FROM category_rule
        <where>
            <if test="keyword != null and keyword != ''">
                AND (keyword LIKE CONCAT('%', #{keyword}, '%') OR rule_name LIKE CONCAT('%', #{keyword}, '%'))
            </if>
        </where>
        ORDER BY priority ASC, id ASC
    </select>
    
</mapper>
